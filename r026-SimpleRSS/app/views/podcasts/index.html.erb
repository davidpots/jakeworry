<h1>Listing podcasts</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Url web</th>
      <th>Url rss</th>
      <th>Url itunes</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @podcasts.each.with_index do |podcast,index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= podcast.name %></td>
        <td><%= podcast.description %></td>
        <td><%= podcast.url_web %></td>
        <td><%= podcast.url_rss %></td>
        <td><%= podcast.url_itunes %></td>
        <td><%= podcast.image %></td>
        <td><%= link_to 'Show', podcast %></td>
        <td><%= link_to 'Edit', edit_podcast_path(podcast) %></td>
        <td><%= link_to 'Destroy', podcast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

